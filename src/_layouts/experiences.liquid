{% assign info = lab.info[lang] %}
<!DOCTYPE html>
<html lang="{{ lang }}">
    <head>
        <meta charset="UTF-8"/>
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"/>
        <meta content="width=device-width, initial-scale=1" name="viewport"/>
        <title>{{ experience.title }}</title>
        <meta content="{{ experience.description }}" name="description"/>
        <link href="https://fonts.googleapis.com/css?family=Barlow:400,500,500i&display=swap" rel="stylesheet">
        <link href="/assets/style/main.css" rel="stylesheet"/><!--[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script><script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->
        <!-- Disable tap highlight on IE--><script crossorigin="anonymous" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" src="https://code.jquery.com/jquery-3.3.1.min.js"> </script>
        <meta content="no" name="msapplication-tap-highlight"/>
        <link href="/assets/favicons/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180">
        <link href="/assets/favicons/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png">
        <link href="/assets/favicons/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png">
        <link href="/assets/favicons/site.webmanifest" rel="manifest">
        <link color="#000000" href="/assets/favicons/safari-pinned-tab.svg" rel="mask-icon">
        <link href="/assets/favicons/favicon.ico" rel="shortcut icon">
        <meta content="#000000" name="msapplication-TileColor">
        <meta content="/assets/favicons/browserconfig.xml" name="msapplication-config">
        <meta content="#ffffff" name="theme-color">
    </head>
    <body class="experience-page bg-black-90 white lh-copy">
        <header class="absolute z-2 w-100 fixed-l">
            <a class="db w4 center nt3" href="../"><img alt="Logo Lab" src="{{ api.assets_url }}/{{ info.header_lablogo.path }}"/></a>
        </header>
        <div class="cover-wrapper fl-l w-60-l vh100-l pa0-l fixed-l tc overflow-hidden">
            {% include coverImage %}
        </div>
        <div class="title-wrapper w-100 pb4 overflow-hidden h5-l pb5-l flex-l flex-column-reverse-l absolute-l">
            <div class="marquee crawler pb4-l"></div>
            <div class="marquee" id="mycrawler">
                {% for i in (1..7) %}
                    {{ experience.title }}
                    ‚è≤
                {% endfor %}
            </div>
        </div>
        <a href="{{ experience.url }}" class="launch-bt z-3 no-underline pointer db center b--solid bw1 b--white bg-black white f3 pb1 ph2 mb4 fixed-l right-1-l top-1-l">
            {{ info.experiences_start }}
        </a>
        <div class="spacer fr w-40-l vh-75-l"></div>
        <div class=" description f3 measure w-40-l fr-l cb-l ph3 pb6 center">
            {{ experience.description | markdown2HTML }}
            <h3 class="f3 normal">{{ info.experiences_credits }}</h3>
            {{ experience.credits | markdown2HTML }}
        </div>

        {% include footer %}

        <script src="/assets/js/vendors/crawler-min.js" type="text/javascript"></script>
        {% include markeeScript.html %}
        {% include googleAnalytics.html %}
    </body>
</html>
